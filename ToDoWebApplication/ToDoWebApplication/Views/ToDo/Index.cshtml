@model IEnumerable<ToDoWebApplication.Models.ToDoModel>

@{
    ViewData["Title"] = "Index";
    ToDoModelFilter filter = ViewData["Filter"] as ToDoModelFilter;
}

<h1>Index</h1>

<p>
    <div>
        @Html.Label("Search text")
        @Html.TextBoxFor(x => filter.SearchText)
    </div>
    <div>
        @Html.RadioButton("ExpireDate", filter, filter.All)
        @Html.Label("All")
    </div>
    <div>
        @Html.RadioButton("ExpireDate", filter, filter.Today)
        @Html.Label("Today")
    </div>
    <div>
        @Html.RadioButton("ExpireDate", filter, filter.NextDay)
        @Html.Label("Next day")
    </div>
    <div>
        @Html.RadioButton("ExpireDate", filter, filter.IncommingWeek)
        @Html.Label("Incomming week")
    </div>
    <div>
        @Html.ActionLink("Filter", "Index", filter)
    </div>
    <div></div>
    <div></div>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Id)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Title)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Description)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Complete)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ExpiryDateTime)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Done)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Id)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Title)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Description)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Complete)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ExpiryDateTime)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Done)
            </td>
            <td>
                @Html.ActionLink("Edit", "Edit", new {  id = item.Id  }) |
                    @Html.ActionLink("Details", "Details", new { id = item.Id }) |
                    @Html.ActionLink("Delete", "Delete", new { id = item.Id })
            </td>
        </tr>
}
    </tbody>
</table>
